<odoo>
    <!-- TREE -->
    <record id="view_aporte_registro_list" model="ir.ui.view">
        <field name="name">aporte.registro.list</field>
        <field name="model">aporte.registro</field>
        <field name="arch" type="xml">
            <list>
                <field name="socio_id"/>
                <field name="mes"/>
                <field name="anio"/>
                <field name="ingreso"/>
                <field name="egreso"/>
                <field name="saldo"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_aporte_registro_form" model="ir.ui.view">
        <field name="name">aporte.registro.form</field>
        <field name="model">aporte.registro</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="socio_id"/>
                    <field name="anio"/>
                    <field name="mes"/>
                </group>

                <group>
                    <field name="ingreso"/>
                    <field name="egreso"/>
                    <field name="saldo" readonly="1"/>
                </group>

                <group>
                    <field name="observacion"/>
                </group>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_aporte_registro" model="ir.actions.act_window">
        <field name="name">Registro de Aportes</field>
        <field name="res_model">aporte.registro</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
