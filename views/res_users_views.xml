<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_eps" model="ir.ui.view">
        <field name="name">res.users.form.eps</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Sistema EPS - Cajas">
                    <group>
                        <field name="eps_caja_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>